require "echoe"
Echoe.new( "mpt" ) do |p|
	p.author = "Anatoly Lapshin"
	p.summary = "Monkey Patching Toolkit"
	p.runtime_dependencies = ['activesupport', 'uuid']
	p.development_dependencies = []
	p.need_tar_gz = false
	p.retain_gemspec = true
	p.gemspec_name = 'mpt.gemspec'
	p.clean_pattern.push 'lib/*-*'
end